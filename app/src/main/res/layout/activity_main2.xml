<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capturar Datos"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:background="#4CAF50"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/layo_valor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor: "
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#59F1FF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduzca Valor"
            android:inputType="numberDecimal"
            android:id="@+id/valor" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/layo_posC">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posicion C:"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#59F1FF"
            />

        <EditText
            android:id="@+id/posicionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:hint="Introduce Posicion"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/layo_posR">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posicion R:"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#59F1FF"
            />

        <EditText
            android:id="@+id/posicionR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:hint="Introduce Posicion"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/layo_capturarYrepetir">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capturar"
            android:layout_marginLeft="70dp"
            android:padding="20dp"
            android:id="@+id/btnCapturar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_marginLeft="60dp"
            android:padding="20dp"
            android:id="@+id/btnRegresar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layo_Archivar">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivo 1"
                android:textSize="20dp"
                android:id="@+id/rb_Archivo1"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivo 2"
                android:textSize="20dp"
                android:id="@+id/rb_Archivo2"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Archivo 3"
                android:textSize="20dp"
                android:id="@+id/rb_Archivo3"
                />

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archivar"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="45dp"
            android:padding="20dp"
            android:id="@+id/btnArchivar"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="Valores:  "/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="3"
            android:id="@+id/Gridlayo"
            />



    </ScrollView>


</LinearLayout>